generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("postgres_PRISMA_DATABASE_URL")
  directUrl = env("postgres_POSTGRES_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  role      String   @default("USER")
  hourlyWage Float    @default(7.0)
  profileImage String?  @db.Text // Use Text type for base64 strings if needed, though String usually maps to text in Postgres anyway. Let's just use String? but standard prisma String is fine.
  createdAt DateTime @default(now())
  entries   Entry[]
  messages  Message[]
  subscriptions PushSubscription[]
}

model Entry {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  type      String
  timestamp DateTime @default(now())
  photoUrl  String?
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model PushSubscription {
  id        Int      @id @default(autoincrement())
  endpoint  String   @unique
  p256dh    String
  auth      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
